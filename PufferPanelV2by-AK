#!/bin/bash

# ðŸŽ¨ Colorful ASCII Art: A K
echo -e "\e[1;31m     â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•—         â–ˆâ–ˆâ•—  â–ˆâ–ˆâ•—      \e[0m"
echo -e "\e[1;33m    â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•—        â–ˆâ–ˆâ•‘ â–ˆâ–ˆâ•”â•      \e[0m"
echo -e "\e[1;32m   â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•‘        â–ˆâ–ˆâ–ˆâ–ˆâ–ˆâ•”â•       \e[0m"
echo -e "\e[1;36m   â–ˆâ–ˆâ•”â•â•â–ˆâ–ˆâ•‘        â–ˆâ–ˆâ•”â•â–ˆâ–ˆâ•—       \e[0m"
echo -e "\e[1;34m   â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•‘        â–ˆâ–ˆâ•‘  â–ˆâ–ˆâ•—      \e[0m"
echo -e "\e[1;35m   â•šâ•â•  â•šâ•â•        â•šâ•â•  â•šâ•â•      \e[0m"
echo -e "\e[1;37m             A       K          \e[0m"
echo ""

# ðŸš€ Installing PufferPanel
echo -e "\e[1;36m>>> Starting PufferPanel installation...\e[0m"

# Required before sudo
apt install -y sudo

sudo apt update
sudo apt install -y curl

# Optional attempt to install systemd (won't work in containers)
sudo apt install -y systemd

# Add PufferPanel repository
curl -s https://packagecloud.io/install/repositories/pufferpanel/pufferpanel/script.deb.sh?any=true | sudo bash

# Install PufferPanel
sudo apt update
sudo apt install -y pufferpanel

# Add PufferPanel user
sudo pufferpanel user add

# Enable and start the PufferPanel service
sudo systemctl enable --now pufferpanel

echo -e "\e[1;32mâœ… PufferPanel installation complete, Also Subscribe AKMC GAMERZ!\e[0m"
